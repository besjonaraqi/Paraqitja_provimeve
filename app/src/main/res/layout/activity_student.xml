<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      android:layout_weight="0.89"
      android:weightSum="1"
      android:background="@drawable/background">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/user"
        android:id="@+id/mImageView"
        android:layout_weight="0.15"
        android:layout_marginTop="25dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="0.15"
        android:layout_height="80dp">

      <TextView
          android:text="Emri:"
          android:layout_height="wrap_content"
          android:id="@+id/mTextViewEmri"
          android:layout_weight="1"
          android:textSize="25sp"
          android:gravity="right"
          android:layout_marginTop="15dp"
          android:layout_width="275dp"
          android:textColor="#000000" />

      <TextView
          android:text="Emri"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/mUserName"
          android:layout_weight="1"
          android:gravity="center"
          android:layout_marginTop="15dp"
          android:textSize="25sp"
          android:textColor="#c7213b" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="0.15"
        android:layout_height="80dp">

      <TextView
          android:text="Mbiemri:"
          android:layout_height="wrap_content"
          android:id="@+id/mTextViewMbiemri"
          android:layout_weight="1"
          android:textSize="25sp"
          android:gravity="right"
          android:layout_marginTop="15dp"
          android:layout_width="275dp"
          android:textColor="#000000" />

      <TextView
          android:text="Mbiemri"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/mUserLname"
          android:layout_weight="1"
          android:gravity="center"
          android:layout_marginTop="15dp"
          android:textSize="25sp"
          android:textColor="#c7213b" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="0.15"
        android:layout_height="80dp">

      <TextView
          android:text="Nr.Indeksit:"
          android:layout_height="wrap_content"
          android:id="@+id/mTextViewIndeksi"
          android:layout_weight="1"
          android:textSize="25sp"
          android:gravity="right"
          android:layout_marginTop="15dp"
          android:layout_width="275dp"
          android:textColor="#000000" />

      <TextView
          android:text="Nr. Indeksit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/mUserIndeksi"
          android:layout_weight="1"
          android:gravity="center"
          android:layout_marginTop="15dp"
          android:textSize="25sp"
          android:textColor="#c7213b" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="0.15"
        android:layout_height="80dp">

      <TextView
          android:text="Kampusi:"
          android:layout_height="wrap_content"
          android:id="@+id/mTextViewKampusi"
          android:layout_weight="1"
          android:textSize="25sp"
          android:gravity="right"
          android:layout_marginTop="15dp"
          android:layout_width="275dp"
          android:textColor="#000000" />

      <TextView
          android:text="Kampusi"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/mUserKampusi"
          android:layout_weight="1"
          android:layout_marginTop="15dp"
          android:gravity="center"
          android:textSize="25sp"
          android:textColor="#c7213b" />
    </LinearLayout>

  </LinearLayout>

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:background="#c7213b"
      android:weightSum="1">

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.30"
        android:layout_gravity="center"
        android:background="#c7213b"
        android:src="@drawable/profile"
        android:id="@+id/mImageButtonProfile" />
    <ImageButton
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.30"
        android:layout_gravity="center"
        android:background="#c7213b"
        android:src="@drawable/provimet"
        android:id="@+id/mImageButtonProvimet" />
    <ImageButton
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.30"
        android:layout_gravity="center"
        android:background="#c7213b"
        android:src="@drawable/logout1"
        android:id="@+id/mImageButtonLogout" />
  </LinearLayout>
</LinearLayout>
